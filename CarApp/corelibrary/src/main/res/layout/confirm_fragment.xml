<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_bg_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mask_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="@dimen/dd_dimen_320px"
        android:orientation="vertical"
        android:padding="@dimen/dd_dimen_30px" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_tip_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dd_dimen_40px" />

            <TextView
                android:id="@+id/confirm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dd_dimen_6px"
                android:textColor="@color/dialog_title"
                android:textSize="@dimen/dd_dimen_40px" />
        </LinearLayout>

        <TextView
            android:id="@+id/confirm_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dd_dimen_6px"
            android:textColor="@color/dialog_desc"
            android:textSize="@dimen/dd_dimen_30px"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_10px" >

        <Button
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dd_dimen_90px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_weight="3"
            android:background="@drawable/btn_back"
            android:textColor="@color/dialog_title"
            android:textSize="@dimen/dd_dimen_34px"
            android:visibility="visible" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dd_dimen_90px"
            android:layout_weight="4"
            android:textSize="@dimen/dd_dimen_34px" />
    </LinearLayout>

</LinearLayout>
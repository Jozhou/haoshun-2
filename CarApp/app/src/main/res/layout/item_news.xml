<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dd_dimen_30px"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_color_four"
        android:textSize="@dimen/font_size_four"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_news_time"
        android:paddingLeft="@dimen/dd_dimen_6px"
        android:paddingRight="@dimen/dd_dimen_6px"
        android:paddingTop="@dimen/dd_dimen_4px"
        android:paddingBottom="@dimen/dd_dimen_4px"
        android:text="sdfjsldkfjsdklafj"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_300px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:layout_below="@id/tv_time">
        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_frame_num"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:textColor="@color/font_color_four"
            android:textSize="@dimen/font_size_three"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:text="kasdjfklsdjfslkdfjklasdf"/>


        <LinearLayout
            android:id="@+id/ll_praise"
            android:layout_width="@dimen/dd_dimen_80px"
            android:layout_height="@dimen/dd_dimen_80px"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:background="@drawable/bg_news_praise"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xin_bai"
                android:layout_marginTop="@dimen/dd_dimen_6px"/>

            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_four"
                android:textSize="@dimen/font_size_four"
                android:gravity="center"
                android:text="8"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.corelibrary.widget.WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ll_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="@dimen/dd_dimen_80px"
            android:layout_height="@dimen/dd_dimen_80px"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dd_dimen_20px"
            android:background="@drawable/bg_news_praise"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xin_bai"
                android:layout_marginTop="@dimen/dd_dimen_6px"/>

            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_four"
                android:textSize="@dimen/font_size_four"
                android:gravity="center"
                android:text="8"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_five"
            android:textSize="@dimen/font_size_four"
            android:text="@string/click_praise"
            android:layout_marginBottom="@dimen/dd_dimen_20px"/>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_220px"
    android:paddingLeft="@dimen/dd_dimen_20px"
    android:paddingRight="@dimen/dd_dimen_20px"
    android:paddingTop="@dimen/dd_dimen_30px"
    android:paddingBottom="@dimen/dd_dimen_30px"
    android:background="@color/font_color_four">

    <ImageView
        android:id="@+id/iv_store"
        android:layout_width="@dimen/dd_dimen_160px"
        android:layout_height="@dimen/dd_dimen_160px"
        android:src="@drawable/bg_frame_num"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_three"
        android:textColor="@color/font_color_one"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_store"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:text="safdjsljfsldafjsldfj"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_toRightOf="@id/iv_store" >
        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop_xingxing_5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dd_dimen_8px">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_four"
                android:textColor="@color/font_color_five"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawableLeft="@drawable/shop_time"
                android:drawablePadding="@dimen/dd_dimen_4px"
                android:text="8:00-10:00"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_four"
                android:textColor="@color/font_color_five"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawableLeft="@drawable/shop_phone"
                android:drawablePadding="@dimen/dd_dimen_4px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:text="8:00-10:00"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_three"
        android:textColor="@color/font_color_one"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="56km"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_three"
        android:textColor="@color/font_color_one"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_store"
        android:layout_toLeftOf="@id/tv_distance"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/shop_addr"
        android:drawablePadding="@dimen/dd_dimen_6px"
        android:text="safdjsljfsldafjsldfjsdf asdfsadfsdfasdf"/>



</RelativeLayout>